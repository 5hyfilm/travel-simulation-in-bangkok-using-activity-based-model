<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE config SYSTEM "http://www.matsim.org/files/dtd/config_v2.dtd">

<config>
	<modules>

		<!-- Network -->
		<module name="network">
			<param name="inputNetworkFile" value="data/processed/network_clean_tuned.xml"/>
		</module>

		<!-- Transit settings -->
		<module name="transit">
			<param name="useTransit" value="true"/>
			<param name="transitScheduleFile" value="data/processed/transitSchedule.xml"/>
			<param name="vehiclesFile" value="data/processed/transitVehicles.xml"/>
		</module>

		<!-- Controller -->
		<module name="controler">
			<param name="lastIteration" value="0"/>
			<param name="outputDirectory" value="output/visualize"/>
			<param name="overwriteFiles" value="deleteDirectoryIfExists"/>
		</module>

		<!-- Visualization -->
		<module name="qsim">
			<param name="endTime" value="36:00:00"/> <!-- เผื่อ simulation ยาวๆ -->
		</module>

	</modules>
</config>
